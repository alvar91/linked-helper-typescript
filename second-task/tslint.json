{
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "public-static-method",
                    "public-instance-field",
                    "public-constructor",
                    "public-instance-method",
                    "protected-constructor",
                    "private-constructor",
                    "protected-static-method",
                    "private-static-method",
                    "protected-instance-method",
                    "private-instance-method",
                    "protected-static-field",
                    "private-static-field",
                    "protected-instance-field",
                    "private-instance-field"
                ]
            }
        ],
        "no-trailing-whitespace": [
            true,
            "ignore-template-strings",
            "ignore-blank-lines",
            "ignore-jsdoc"
        ],
        "object-literal-sort-keys": [
            true,
            "match-declaration-order-only"
        ],
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-whitespace"
        ],
        "promise-function-async": true,
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-interfaces"
        ],
        "space-before-function-paren": [
            true,
            "named",
            "asyncArrow",
            "method",
            "constructor"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "arrays": "ignore",
                    "objects": "ignore",
                    "functions": "never",
                    "imports": "never",
                    "exports": "never",
                    "typeLiterals": "ignore"
                },
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "triple-equals": false,
        "whitespace": false,
        "lh-whitespace": [
            true,
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock",
            "check-postbrace"
        ]
    },
    "rulesDirectory": "./tslint"
}